<Window x:Class="Left4DeadTrollControl.AppClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Left4DeadTrollControl.AppClient"
        mc:Ignorable="d"
        Title="Left4Dead Troll Control" Height="600" Width="800"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Menu Button Style -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0"
                                CornerRadius="5"
                                Margin="5,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3A3A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Side Menu -->
        <Border Grid.Column="0" Background="#2D2D30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#1E1E1E" Padding="15">
                    <StackPanel>
                        <TextBlock Text="L4D Troll Control" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   TextAlignment="Center"/>
                        <TextBlock Text="v1.0" 
                                   Foreground="#999999" 
                                   FontSize="10" 
                                   TextAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <Button x:Name="HomeButton" 
                            Style="{StaticResource MenuButtonStyle}"
                            Click="NavigateToHome">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏠" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Home"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="RegistrationButton" 
                            Style="{StaticResource MenuButtonStyle}"
                            Click="NavigateToRegistration">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📝" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Troll Registration"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="ListButton" 
                            Style="{StaticResource MenuButtonStyle}"
                            Click="NavigateTolisting">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="List"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="ScriptGenerationButton" 
                            Style="{StaticResource MenuButtonStyle}"
                            Click="NavigateToProgress">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Script Generation"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="SettingsButton" 
                            Style="{StaticResource MenuButtonStyle}"
                            Click="NavigateToSettings">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔧" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Settings"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="AboutButton" 
                            Style="{StaticResource MenuButtonStyle}"
                            Click="NavigateToAbout">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ℹ️" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="About"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Border Grid.Column="1" Background="#F5F5F5">
            <ContentControl x:Name="ContentArea" Margin="20"/>
        </Border>
    </Grid>
</Window>
