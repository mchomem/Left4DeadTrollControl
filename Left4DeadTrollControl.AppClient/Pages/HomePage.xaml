<UserControl x:Class="Left4DeadTrollControl.AppClient.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Left4DeadTrollControl.AppClient.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="560">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#007ACC" Padding="20,15">
            <TextBlock Text="Welcome to L4D Troll Control" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="SemiBold"/>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="30" VerticalAlignment="Center">
            <TextBlock Text="Troll Management System" 
                       FontSize="18" 
                       FontWeight="Medium"
                       Foreground="#333333"
                       Margin="0,0,0,15"/>
            
            <TextBlock TextWrapping="Wrap" 
                       FontSize="13" 
                       Foreground="#666666"
                       LineHeight="22"
                       Margin="0,0,0,30">
                <Run Text="This system allows you to register and manage troll information for automatic configuration script generation."/>
                <LineBreak/>
                <LineBreak/>
                <Run Text="Use the side menu to navigate between features:"/>
            </TextBlock>

            <!-- Feature Cards -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Card 1 -->
                <Border Grid.Column="0" Grid.Row="0" 
                        Background="#F9F9F9" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,10,10">
                    <StackPanel>
                        <TextBlock Text="+ Registration" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#007ACC"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Add new trolls to the system with detailed information."
                                   TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="#666666"/>
                    </StackPanel>
                </Border>

                <!-- Card 2 -->
                <Border Grid.Column="1" Grid.Row="0" 
                        Background="#F9F9F9" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="10,0,0,10">
                    <StackPanel>
                        <TextBlock Text="List" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#007ACC"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="View and manage all registered trolls."
                                   TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="#666666"/>
                    </StackPanel>
                </Border>

                <!-- Card 3 -->
                <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                        Background="#F9F9F9" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Script Generation" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#007ACC"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Automatically generate configuration scripts based on registered data."
                                   TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="#666666"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
