<UserControl x:Class="Left4DeadTrollControl.AppClient.Pages.TrollRegistrationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Left4DeadTrollControl.AppClient.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="560">

    <UserControl.Resources>
        <!-- TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label Style -->
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="25,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="25,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#007ACC" Padding="20,15">
            <TextBlock Text="Troll Registration" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="SemiBold"/>
        </Border>

        <!-- Form -->
        <StackPanel Grid.Row="1" Margin="30,20">

            <!-- Steam ID and Nickname (side by side) -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Steam ID -->
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Steam ID" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="*" Foreground="Red" FontSize="13" Margin="3,0,0,5"/>
                        <TextBlock Text=" - Numbers only (up to 8 digits)"
                               FontSize="11"
                               Foreground="#999999"
                               Margin="0,3,0,0"/>
                    </StackPanel>
                    <TextBox x:Name="SteamIdTextBox"
                             Text="{Binding SteamId, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             MaxLength="8"
                             PreviewTextInput="SteamIdTextBox_PreviewTextInput"/>

                </StackPanel>

                <!-- Nickname -->
                <StackPanel Grid.Column="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Nickname" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text=" - Custom identification"
                            FontSize="11"
                            Foreground="#999999"
                            Margin="0,3,0,0"/>
                    </StackPanel>
                    <TextBox x:Name="NicknameTextBox"
                             Text="{Binding Nickname, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             MaxLength="100" />
                </StackPanel>
            </Grid>

            <!-- Profile URL -->
            <StackPanel Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Profile URL" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text=" - Full Steam profile URL"
                            FontSize="11"
                            Foreground="#999999"
                            Margin="0,3,0,0"/>
                </StackPanel>
                <TextBox x:Name="ProfileUrlTextBox"
                         Text="{Binding ProfileUrl, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBoxStyle}"
                         MaxLength="300" />
            </StackPanel>

            <!-- Notes -->
            <StackPanel Margin="0,0,0,30">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Notes" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text=" - Additional notes about the troll"
                           FontSize="11"
                           Foreground="#999999"
                           Margin="0,3,0,0"/>
                </StackPanel>
                <TextBox x:Name="NotesTextBox"
                         Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBoxStyle}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="100"
                         MaxLength="2000"
                         VerticalScrollBarVisibility="Auto"/>
                <TextBlock Text="{Binding CountCharactersTextNotes, StringFormat='{}{0}/2000'}"
                           FontSize="11"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Clear" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ClearCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="Save" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
